@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Passwort-Reset angefordert";
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h1>E-Mail versendet</h1>
            <p class="text-muted">@ViewData["Title"]</p>
        </div>

        <div class="confirmation-message">
            <div class="alert alert-info">
                <i class="fas fa-envelope"></i>
                <p>
                    Falls ein Konto mit dieser E-Mail-Adresse existiert, haben wir eine E-Mail mit
                    weiteren Anweisungen zum Zurücksetzen Ihres Passworts versendet.
                </p>
            </div>

            <div class="additional-info">
                <p class="text-muted">
                    Bitte überprüfen Sie auch Ihren Spam-Ordner, falls Sie keine E-Mail erhalten haben.
                </p>
            </div>

            <div class="d-grid gap-2">
                <a asp-page="./Login" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left"></i> Zurück zum Login
                </a>
            </div>
        </div>
    </div>
</div>

