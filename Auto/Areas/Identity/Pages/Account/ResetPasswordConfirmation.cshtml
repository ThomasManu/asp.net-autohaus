@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Passwort zurückgesetzt";
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h1>Passwort erfolgreich geändert!</h1>
            <p class="text-muted">Sie können sich jetzt mit Ihrem neuen Passwort anmelden</p>
        </div>

        <div class="confirmation-message">
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                <p>Ihr Passwort wurde erfolgreich aktualisiert.</p>
            </div>

            <div class="d-grid gap-2">
                <a asp-page="./Login" class="btn btn-primary login-btn">
                    <i class="fas fa-sign-in-alt"></i> Zum Login
                </a>
            </div>

            <div class="login-links mt-3">
                <a asp-page="/Index" class="back-to-home">
                    <i class="fas fa-home"></i> Zur Startseite
                </a>
            </div>
        </div>
    </div>
</div>


}